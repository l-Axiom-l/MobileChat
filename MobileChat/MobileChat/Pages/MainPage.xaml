<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileChat.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Settings" IconImageSource="gearicon.png" Order="Primary"></ToolbarItem>
        <ToolbarItem x:Name="Contacts" IconImageSource="contacticon.png" Order="Primary"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout BackgroundColor="Black">
        <ScrollView HeightRequest="700">
            <Label x:Name="Test" TextColor="White"></Label>
        </ScrollView>

        <Grid ColumnDefinitions="*,*,*" RowDefinitions="50">
            <Entry x:Name="Input" TextColor="White" Grid.Row="0" Grid.ColumnSpan="2"></Entry>
            <Button x:Name="SendButton" Text="Send" Grid.Row="0" Grid.Column="2" ></Button>
        </Grid>
    </StackLayout>

</ContentPage>
